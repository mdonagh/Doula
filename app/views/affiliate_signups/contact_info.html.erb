<div class="container">
  <div class="page-header text-center mt-5">
    <h2>BECOME A PARTNER</h2>
  </div>

  <div class="row mt-5 mb-4 align-items-end">
    <div class="col">
        <h5>TELL US ABOUT YOUR BUSINESS!</h5>
    </div>
    <div class="col text-right">
      <p><%= @current_step_number %>  of <%= @step_total %></p>
    </div>
  </div>

  <%= form_for(@affiliate, url: wizard_path, method: :put) do |f| %>

      <%= f.fields_for :address do |a| %>
        <div class="form-group">
          <%= a.text_field :street_address, autofocus: true, placeholder: "Address (where do your customers find you)", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= a.text_field :address_line2, placeholder: "Apartment, Suite, etc", class: "form-control" %>
        </div>

        <div class="form-row">
          <div class="form-group col">
            <%= a.text_field :city, placeholder: "City", class: "form-control" %>
          </div>

          <div class="form-group col">
            <%= a.select :state, @states, {prompt: "State"}, {class: "form-control mt-0"} %>
          </div>

          <div class="form-group col">
            <%= a.text_field :zip_code, placeholder: "Zip", class: "form-control" %>
          </div>
        </div>

      <% end %>

    <div class="form-row">
      <div class="form-group col">
        <%= f.text_field :phone, placeholder: "Business Phone", class: "form-control" %>
      </div>

      <div class="form-group col">
        <%= f.text_field :website, placeholder: "Website", class: "form-control" %>
      </div>
    </div>

  <div class="form-group">
  <%= f.label :location_independent do %>
    <%= f.check_box :location_independent %>
      Business is online only
  <% end %>
  </div>
 

    <div class="actions row mt-4">
        <div class="col">
            <%= fa_icon "chevron-left xs" %> <%= link_to "Back", :back, class: "black-link" %>
        </div>
        <div class="col text-right">
            <div class="actions">
                <%= f.submit "Next", class: "btn btn-primary btn-sm" %>
            </div>
        </div>
    </div>

  <% end %>

</div>
