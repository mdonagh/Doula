<% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Rails.application.credentials[:google_analytics][:tracking_id] %>"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '<%= Rails.application.credentials[:google_analytics][:tracking_id] %>');
    </script>
<% end %>